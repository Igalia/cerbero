 {
     m_size = size;
+    m_size.scale(1 / m_pageProxy->deviceScaleFactor());
     if (m_pageProxy->drawingArea())
-        m_pageProxy->drawingArea()->setSize(size);
+        m_pageProxy->drawingArea()->setSize(m_size);
 }
 
